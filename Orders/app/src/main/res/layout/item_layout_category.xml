<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_category"
    android:layout_margin="4dp"
    >

    <RelativeLayout
    android:background="#51d655"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_category"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"/>
    <TextView
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_category_name"
        android:layout_toRightOf="@id/iv_category"
        android:textSize="15pt"
        android:text="@string/category_name"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_delete_category"
            android:layout_below="@+id/bt_edit_category"
            android:layout_toRightOf="@+id/tv_list_position"
            android:src="@android:drawable/ic_menu_delete"
            />
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_list_position"
            android:layout_toRightOf="@id/iv_category"
            android:layout_below="@+id/tv_category_name"
            android:text="@string/list_position"
            android:textSize="10pt"

            />



        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_edit_category"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_category_name"
            android:layout_toEndOf="@+id/tv_category_name" />

    </RelativeLayout>


</android.support.v7.widget.CardView>